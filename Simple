spam = ['apples', 'bananas', 'tofu', 'cats']
toast = ['list','list2','list3']
listicle = ['fresh', 'sweet', 'creamy', 'butter', 'cheese', 'hashbrowns']

def comma(list):
    counter = 0
    for counter in range(len(list)-1):
        print (list[counter] +', ', end='')
    print ( 'and ' + list[counter+1])

comma(spam)
comma(listicle)
comma(toast)
